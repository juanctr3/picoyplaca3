<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # ==========================================
    # HTTPS Y REDIRECCIONES DE DOMINIO
    # ==========================================
    
    # Forzar HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Redirecciones de dominio (si aplica)
    RewriteCond %{HTTP_HOST} ^www\.picoyplacabogota\.com$ [NC]
    RewriteRule ^(.*)$ https://picoyplacabogota.com.co/$1 [R=301,L]
    
    RewriteCond %{HTTP_HOST} ^picoyplacabogota\.com$ [NC]
    RewriteRule ^(.*)$ https://picoyplacabogota.com.co/$1 [R=301,L]
    
    # ==========================================
    # URLs DINÁMICAS - PICO Y PLACA POR FECHA
    # ==========================================
    
    # /pico-y-placa/2025-11-10-bogota → index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^pico-y-placa/(\d{4})-(\d{2})-(\d{2})-([a-z_]+)/?$ index.php?date=$1-$2-$3&city=$4 [L,QSA]
    
    # ==========================================
    # ARCHIVOS ESTÁTICOS - NO REESCRIBIR
    # ==========================================
    
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # ==========================================
    # CATCH-ALL PARA OTROS PATRONES
    # ==========================================
    
    RewriteRule ^(.*)$ index.php [L,QSA]
    
</IfModule>

# ==========================================
# COMPRESIÓN GZIP
# ==========================================

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
</IfModule>

# ==========================================
# CACHÉ
# ==========================================

<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 7 days"
    
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType text/css "access plus 30 days"
    ExpiresByType text/javascript "access plus 30 days"
    ExpiresByType application/javascript "access plus 30 days"
    
    ExpiresByType image/jpeg "access plus 60 days"
    ExpiresByType image/gif "access plus 60 days"
    ExpiresByType image/png "access plus 60 days"
    ExpiresByType image/webp "access plus 60 days"
    
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    
    ExpiresByType application/json "access plus 1 day"
    ExpiresByType application/xml "access plus 1 day"
    
    # ==========================================
    # PWA - MANIFEST Y SERVICE WORKER
    # ==========================================
    
    ExpiresByType application/manifest+json "access plus 3600 seconds"
    ExpiresByType application/x-web-app-manifest+json "access plus 3600 seconds"
</IfModule>

# ==========================================
# HEADERS DE SEGURIDAD Y PWA
# ==========================================

<IfModule mod_headers.c>
    # Seguridad
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header append Vary Accept-Encoding
    
    # PWA - CORS para manifest
    <FilesMatch "\.json$">
        Header set Access-Control-Allow-Origin "*"
        Header set Content-Type "application/json; charset=utf-8"
    </FilesMatch>
    
    # PWA - Service Worker
    <FilesMatch "service-worker\.js$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
        Header set Service-Worker-Allowed "/"
    </FilesMatch>
    
    # Manifest con cache
    <FilesMatch "manifest\.json$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

# ==========================================
# SEGURIDAD ADICIONAL
# ==========================================

<FilesMatch "\.(env|json|lock|sql)$">
    Deny from all
</FilesMatch>

# PERMITIR ARCHIVOS NECESARIOS
<FilesMatch "\.(jpg|jpeg|png|gif|pdf|css|js|txt|xml|svg|woff|woff2|ttf|otf|json|webmanifest)$">
    Allow from all
</FilesMatch>

Options -Indexes

# ==========================================
# CODIFICACIÓN
# ==========================================

AddDefaultCharset UTF-8
AddType 'text/html; charset=UTF-8' html htm

# PWA - MIME TYPES
AddType application/manifest+json .webmanifest
AddType application/manifest+json .json
AddType application/x-web-app-manifest+json .json
AddType application/javascript .js

# ==========================================
# MÉTODOS HTTP PERMITIDOS
# ==========================================

<LimitExcept GET POST HEAD OPTIONS>
    Deny from all
</LimitExcept>

# ==========================================
# REDIRECCIONES PARA PÁGINAS DE COUNTDOWN
# ==========================================

# Agregar estas reglas a tu .htaccess (dentro de <IfModule mod_rewrite.c>)

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^a-que-hora-empieza-el-pico-y-placa/?$ inicio-pico-y-placa.php [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^a-que-hora-se-acaba-el-pico-y-placa/?$ fin-pico-y-placa.php [L,QSA]

# ==========================================
# REDIRECCIÓN DE ERRORES 404
# ==========================================

ErrorDocument 404 /404.php


# ==========================================
# PREVENIR HOTLINKING
# ==========================================

<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https://picoyplacabogota\.com\.co [NC]
    RewriteCond %{REQUEST_URI} !^/\. [NC]
    RewriteRule \.(jpg|jpeg|gif|png|svg)$ - [L]
</IfModule>